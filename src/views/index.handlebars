<div class="container">
  <div class="row">

    {{#each products.payload}}
      <div class="col-md-3">
        <div class="card text-center">
          <a
            href="/products/{{this.id}}"
            class="text-decoration-none text-black"
          >
            <img
              src="{{this.thumbnails}}"
              class="img-fluid"
              alt="{{this.title}}"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">${{this.price}}</p>
            </div>
          </a>
        </div>
      </div>
    {{/each}}
    <div class="row">
      <div class="col text-center">
        {{#if products.hasPrevPage}}
          <a
            href="{{products.prevLink}}"
            class="text-decoration-none mx-3"
          >Anterior</a>
        {{/if}}
        {{#if products.page}}
          <a href="#" class="text-decoration-none mx-3">{{products.page}}</a>
        {{/if}}
        {{#if products.hasNextPage}}
          <a
            href="{{products.nextLink}}"
            class="text-decoration-none mx-3"
          >Posterior</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>